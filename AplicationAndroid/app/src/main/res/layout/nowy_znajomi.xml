<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_place">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wyszukaj nowych znajomych względem preferencji wybranych poniżej"
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_weight="5"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Szukaj po:"
        android:layout_weight="3"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:text="Lokalizacji"
        android:padding="10dp"
        android:id="@+id/checkBox"
        android:layout_below="@+id/checkLocation"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Preferencjach"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_weight="5"
        android:id="@+id/checkPreferences"
        android:checked="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Totalnie losowo"
        android:padding="20dp"
        android:layout_weight="5"
        android:textSize="20dp"
        android:id="@+id/checkRandom"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Powrót"
            android:background="@color/Orange"
            android:id="@+id/buttonReturn" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wyszukaj"
            android:background="@color/Orange"

            android:id="@+id/buttonSearch" />
    </LinearLayout>


</LinearLayout>