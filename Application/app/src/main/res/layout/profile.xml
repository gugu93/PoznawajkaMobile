<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TWOJ PROFIL"
        android:textSize="25dp"
        android:id="@+id/profil"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil"
        android:gravity="left"
        android:id="@+id/avatar">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/avatarImg"
            android:layout_centerHorizontal="true"
            android:src="#56221819"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zmien zdjÄ™cie"
            android:textColor="#ff1d19ff"
            android:id="@+id/zmienzdjecie"
            android:layout_below="@+id/avatarImg"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil"
        android:id="@+id/dane"
        android:layout_toRightOf="@+id/avatar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: kamil5@gmail.com"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="17dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imie Kamil"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwisko Paszkiewicz"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferencje Brunetki"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wyglad Blondyn"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="20dp"/>





    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/dane"
        android:layout_alignEnd="@+id/dane"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Orange"
            android:textColor="@color/white"
            android:text="Poznaj nowych ludzi juz teraz!"
            android:id="@+id/buttonMeetNewPpl" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:layout_below="@+id/dane"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_toEndOf="@+id/linearLayout"
        android:src="@drawable/images"
        android:layout_toStartOf="@+id/dane"
        android:layout_below="@+id/avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:layout_toLeftOf="@+id/dane"
        tools:ignore="RtlCompat" />

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView3"
        android:src="#56221819"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:paddingTop="20dp"
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView4"
        android:src="#56221819"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Galeria"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Znajomi"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4" />

</RelativeLayout>