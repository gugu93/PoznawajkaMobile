<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Znaleźliśmy dla Ciebie ludzi których musisz poznać!"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/linearLayout2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageView"
            android:paddingLeft="10dp"
            android:src="#56221819"
            />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingTop="5dp"
            android:id="@+id/imageView1"
            android:paddingLeft="10dp"
            android:src="#56221819"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingTop="5dp"
            android:id="@+id/imageView2"
            android:paddingLeft="10dp"
            android:src="#56221819"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_alignBottom="@+id/linearLayout2"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ania (18 lat) pasujecie w 100%"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingLeft="25dp"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aga (19 lat) pasujecie w 99%"
            android:paddingLeft="25dp"
            android:paddingTop="60dp"
            android:textSize="20dp"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ula (34 lata) pasujecie w 84%"
            android:textSize="20dp"
            android:paddingTop="55dp"
            android:paddingLeft="25dp"
            android:id="@+id/textView5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:padding="5dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wyjdz"
            android:layout_weight="1"
            android:id="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poszukaj innych"
            android:layout_weight="1"
            android:id="@+id/button2" />
    </LinearLayout>

</RelativeLayout>