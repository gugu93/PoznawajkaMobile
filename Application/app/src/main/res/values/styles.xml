<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="actionMenuTextColor">@color/my_red</item>
        <item name="android:textViewStyle">@style/FontTextView</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TransActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@android:color/transparent</item>
        <item name="backgroundStacked">@android:color/transparent</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="ActionModeStyle" parent="ActionBar"></style>

    <style name="FontTextView" parent="android:Widget.TextView">
        <item name="fontPath">MyriadPro-Regular.ttf</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="actionMenuTextAppearance">@style/ActionBar.TitleTextStyle</item>
        <item name="actionMenuTextColor">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:textSize">@dimen/text_fourteen</item>
    </style>

    <style name="ObjectListItem" />

    <style name="ObjectListItem.Photo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/hundred_twenty_dips</item>
    </style>

    <style name="ObjectListItem.Name">
        <item name="android:textSize">@dimen/text_fourteen</item>
        <item name="android:textColor">@color/text_white_black</item>
    </style>

    <style name="ObjectListItem.Address">
        <item name="android:textColor">@color/text_white_black</item>
    </style>

    <style name="Button" parent="android:Widget.Button">
        <item name="android:paddingLeft">@dimen/twenty_dips</item>
        <item name="android:paddingRight">@dimen/twenty_dips</item>
        <item name="android:paddingTop">@dimen/five_dips</item>
        <item name="android:paddingBottom">@dimen/five_dips</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/zero</item>
        <item name="android:minWidth">@dimen/zero</item>
    </style>

</resources>
